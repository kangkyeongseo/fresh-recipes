extends ../base 
include ../mixins/recipe

block content 
    div 
        form(method="GET" action=`/user/${user._id}/recipes/search`)
            input(type="text" placeholder="검색" name="keyword")
            input(type="submit" value="Search")   
    div 
        if user.recipes.length === 0
            span 레시피를 추가해주세요.
        else
            each recipe in user.recipes
                +recipe(recipe)
    a(href="/recipe/add")
        i(class="fas fa-plus")
    include ../partials/nav        