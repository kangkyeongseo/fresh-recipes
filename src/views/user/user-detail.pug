extends ../base

block content 
    div
        img(src="/"+user.avatar) 
        h5 #{user.name}의 냉장고
        if loggedInUser._id === user._id.toString()
            a(href="/logout") 로그아웃
    div 
        ul 
            li
                a(href=`/user/${user._id}/ingredients`) 
                    i(class="fas fa-apple-alt")
                    span 냉장고 재료
                    span=user.ingredients.length
            li
                a(href=`/user/${user._id}/recipes`)  
                    i(class="fas fa-utensils")
                    span 레시피
                    span=user.recipes.length 
            li
                a(href=`/user/${user._id}/likes`)  
                    i(class="fas fa-heart")
                    span 찜한 레시피
                    span=user.likes.length 
    if loggedInUser._id === user._id.toString()
        div 
            a(href=`/user/${loggedInUser._id}/edit`) 프로필 수정
    include ../partials/nav